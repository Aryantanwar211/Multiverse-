<svg
  {...Astro.props}
  viewBox="0 0 300 100"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
>
  <defs>
    <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#FF69B4;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#FACC15;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Stylized AMINA text -->
  <g class="amina-text" fill="url(#gradient)">
    <!-- Rotating A -->
    <path d="M30 70 L50 30 L70 70 M35 55 H65" class="rotating-a" />
    
    <!-- MINA -->
    <path d="M80 30 L100 70 L120 30 L140 70" />
    <path d="M150 30 V70 M160 50 H180" />
    <path d="M190 30 V70 M200 30 L220 70 L240 30" />
    <path d="M250 30 V70 H270" />
  </g>

  <!-- Sparkles -->
  <circle cx="20" cy="20" r="2" class="sparkle" fill="#FACC15" />
  <circle cx="280" cy="30" r="2" class="sparkle" fill="#FACC15" />
  <circle cx="150" cy="10" r="2" class="sparkle" fill="#FACC15" />

  <!-- Underline -->
  <path d="M20 80 Q150 90 280 80" class="underline" stroke="url(#gradient)" stroke-width="3" fill="none" />
</svg>

<style>
  .amina-text {
    stroke: url(#gradient);
    stroke-width: 4;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .rotating-a {
    transform-origin: 50px 50px;
    animation: rotateA 3s ease-in-out infinite;
  }

  @keyframes rotateA {
    0%, 100% { transform: rotate(0deg); }
    25% { transform: rotate(5deg); }
    75% { transform: rotate(-5deg); }
  }

  .sparkle {
    animation: twinkle 2s infinite alternate;
  }

  @keyframes twinkle {
    from { opacity: 0.5; transform: scale(0.8); }
    to { opacity: 1; transform: scale(1.2); }
  }

  .underline {
    stroke-dasharray: 300;
    stroke-dashoffset: 300;
    animation: drawUnderline 3s forwards;
  }

  @keyframes drawUnderline {
    to { stroke-dashoffset: 0; }
  }

  svg {
    max-width: 100%;
    height: auto;
  }
</style>